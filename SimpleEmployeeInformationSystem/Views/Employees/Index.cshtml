@model IEnumerable<SimpleEmployeeInformationSystem.Models.Employee>

@{
    ViewBag.Title = "Employee List";
}

<h2>View All Employee Information</h2>

<p>
    @Html.ActionLink("Back to Home", "Index", "Home")
</p>
<h4>Total Employee= @ViewBag.TotalEmployee</h4>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.EmployeeId)*@
            Id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalaryAmount)
        </th>
    </tr>
    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryAmount)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>*@
        </tr>
    }
</table>
<h4>Total Amount= @ViewBag.TotalAmount</h4>
